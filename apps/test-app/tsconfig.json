{
  "extends": ["@reon-island/typescript-config/next.json"],
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "index.d.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.ctsx",
    "**/*.mts",
    "**/*.mtsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    "**/*.cjsx",
    "**/*.mjs",
    "**/*.mjsx",
    "src/app/components/PageLayout"
  ]
}
